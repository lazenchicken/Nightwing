{
  "compilerOptions": {
    "target": "ES2022",                   // modern JS output
    "module": "CommonJS",                 // use CommonJS for Node
    "moduleResolution": "Node",           // classic Node resolution
    "esModuleInterop": true,              // allow `import x from 'y'`
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist"                      // build â†’ dist/
  },
  "include": ["src/**/*.ts"]
}
